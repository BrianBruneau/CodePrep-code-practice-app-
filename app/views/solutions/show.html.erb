<div class="container-fluid">
<div class="row">
  <div class="col-xs-6 col-sm-10 col-lg-12">
 <h3> Logged in as <%= @current_user.name %></h3>
    <h1 id="title">CODEPREP</h1><img src="http://i22.photobucket.com/albums/b315/Doifreakuout14/LOGO.png">
<h3> Solution For: <%= @solution.question.title %></h3>
<pre><%= @solution.content %></pre>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-6 col-sm-4 col-lg-12">
       <%= bootstrap_form_for(@new_comment, {url: 'comments/create'}) do |t| %>
              <%= t.text_area :content, label: "Leave a comment here:" %>
              <%= t.primary %>
              <%= t.hidden_field :solution_id, :value => @solution.id%>
            <% end %>
        </div>
    </div>
</div>



<% @comments.each do |comment|  %>
    <h3><%= comment.user.name %></h3>
    <p><%= comment.content %></p>
    <% end %>
</div>
</div>
</div>


