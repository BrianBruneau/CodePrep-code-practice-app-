<%= render "partials/nav" %>

<div class="container-fluid">
<div class="row">
  <div class="col-xs-6 col-sm-10 col-lg-12">

  <h1>MY SAVED SOLUTIONS</h1>
  <% @solutions.each do |solution|  %>
  <br>
	<pre class="solutions"><strong>PROBLEM:</strong><br><br><%= solution.question.content %>
  <br>
  <strong>SOLUTION:</strong><br><br><%= solution.content %></pre>
  <button id="<%= solution.id %>" class="btn waves-effect waves-light delete">DELETE</button>
  <button class="btn waves-effect waves-light" data-target="#modal<%= solution.id %>" data-toggle="modal" >EDIT</button>
  <a class="btn waves-effect waves-light" href="/questions/<%= solution.question_id %>">VIEW</a>

   <div id="modal<%= solution.id %>" class="modal">
 <div class="col-sm-8 col-md-10 col-lg-12">
      <%= bootstrap_form_for solution do |t| %>
              <%= t.text_area :content %>
              <%= t.primary %>
              <%= t.hidden_field :question_id %>
            <% end %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button> 
  </div>
  </div>

<% end %>
</div>
</div>
</div>

<%= render "partials/footer" %>
