<h1>SIGN UP</h1>

<%= bootstrap_form_for(@user, {url: 'users/create' }) do |f| %>
  <%= f.text_field :name %>
  <%= f.email_field :email %>
  <%= f.password_field :password %>
  <%= f.submit "SUBMIT" %>
<% end %>


